@model MySystem.ViewModels.LikeWeb.WebDataViewModel

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    
}
    <h2>新增我的最愛網頁</h2>
    <!-- Contents -->
    @using (Html.BeginForm("LikeWebAddPage", "LikeWeb", FormMethod.Post))
    {
        <div class="row">
            <div class="panel panel-default">
                <div class="panel-heading">請輸入網站資訊</div>
                <div class="panel-body">
                    <div class="form-group row">
                        <div class="col-xs-3">
                            <label class="control-label"><a class="text-warning">*</a>網頁名稱:</label>
                            @Html.TextBoxFor(m => m.WebName, new { @class = "form-control", placeholder = "Enter WebName" })
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-xs-3">
                            <label class="control-label"><a class="text-warning">*</a>網頁類型:</label>
                            @Html.DropDownListFor(m => m.WebTypeNeme, Model._WebTypeList, new { @class = "form-control" })
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-xs-8">
                            <label class="control-label">網頁連結:</label>
                            @Html.TextBoxFor(m => m.WebURL, new { @class = "form-control", placeholder = "Enter WebURL" })
                        </div>
                    </div>
                </div>
                <div class="panel-footer">
                    <button class="btn btn-success" type="submit" onclick="return confirm('確定要新增嗎?');">
                        <span class="glyphicon glyphicon-ok-circle"></span> 確定新增
                    </button>
                </div>
            </div>
        </div>
    }